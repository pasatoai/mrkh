<%
    loopParagraphs = function(pars) {
        pars.forEach(function(para) { %>
            <p>
                <%= para %>
            </p>
        <% })
    };

    loopLinks = function(pars) {
        pars.forEach(function(para) { %>
            <a href="<%= `/miasto/${para}` %>">
                <%= para %>
            </a> <% })
    };

    infoLine = function(key, val) {
        %>
            <div class="info-line">
                <span>
                    <%= key %>
                </span>
                <span>
                    <%= val %>
                </span>
            </div>
        <%
    }

    makeDroplet = function(num, textBelow) {
        %>
            <div class="droplet">
                <span><%= num %></span>
                <img src="images/lang-toggle-purple.svg" alt="kropla">
            </div>
            <p>
                <%= textBelow %>
            </p>
        <%
    }

    langPicker = function(lang) {
        %>
            <button class="lang-toggler">
                <span> <%= lang %> </span>
            </button>
        <%
    }
%>

